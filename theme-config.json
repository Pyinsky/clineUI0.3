{
  "themes": {
    "name": "StockArt Theme Configuration",
    "version": "1.0.0",
    "description": "Perplexity-inspired dark theme with system preference detection",
    "default": "dark",
    "systemPreference": true,
    "dark": {
      "name": "Dark Theme",
      "colors": {
        "primary": "#1a1a1a",
        "secondary": "#2a2a2a",
        "tertiary": "#333333",
        "accent": {
          "blue": "#4a9eff",
          "teal": "#00d4aa",
          "gradient": "linear-gradient(135deg, #4a9eff, #00d4aa)"
        },
        "text": {
          "primary": "#ffffff",
          "secondary": "#a0a0a0",
          "tertiary": "#666666",
          "muted": "#4a4a4a"
        },
        "border": {
          "primary": "rgba(255, 255, 255, 0.1)",
          "secondary": "rgba(255, 255, 255, 0.05)",
          "focus": "#4a9eff"
        },
        "background": {
          "hover": "rgba(255, 255, 255, 0.05)",
          "active": "rgba(255, 255, 255, 0.1)",
          "modal": "rgba(26, 26, 26, 0.95)",
          "backdrop": "rgba(0, 0, 0, 0.6)"
        },
        "status": {
          "success": "#10b981",
          "error": "#ef4444",
          "warning": "#f59e0b",
          "info": "#3b82f6"
        }
      },
      "shadows": {
        "small": "0 1px 2px rgba(0, 0, 0, 0.1)",
        "medium": "0 4px 6px rgba(0, 0, 0, 0.1)",
        "large": "0 10px 15px rgba(0, 0, 0, 0.2)",
        "glow": "0 0 20px rgba(74, 158, 255, 0.3)",
        "modal": "0 20px 25px rgba(0, 0, 0, 0.3)"
      },
      "typography": {
        "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "fontSize": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem",
          "4xl": "2.25rem",
          "5xl": "3rem"
        },
        "fontWeight": {
          "light": 300,
          "normal": 400,
          "medium": 500,
          "semibold": 600,
          "bold": 700
        },
        "lineHeight": {
          "tight": 1.25,
          "normal": 1.5,
          "relaxed": 1.75
        }
      },
      "spacing": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem"
      },
      "borderRadius": {
        "sm": "0.375rem",
        "md": "0.5rem",
        "lg": "0.75rem",
        "xl": "1rem",
        "2xl": "1.5rem",
        "full": "9999px"
      },
      "transitions": {
        "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
        "base": "250ms cubic-bezier(0.4, 0, 0.2, 1)",
        "slow": "350ms cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "light": {
      "name": "Light Theme (Future Implementation)",
      "colors": {
        "primary": "#ffffff",
        "secondary": "#f8fafc",
        "tertiary": "#f1f5f9",
        "accent": {
          "blue": "#3b82f6",
          "teal": "#059669",
          "gradient": "linear-gradient(135deg, #3b82f6, #059669)"
        },
        "text": {
          "primary": "#1f2937",
          "secondary": "#6b7280",
          "tertiary": "#9ca3af",
          "muted": "#d1d5db"
        },
        "border": {
          "primary": "rgba(0, 0, 0, 0.1)",
          "secondary": "rgba(0, 0, 0, 0.05)",
          "focus": "#3b82f6"
        },
        "background": {
          "hover": "rgba(0, 0, 0, 0.05)",
          "active": "rgba(0, 0, 0, 0.1)",
          "modal": "rgba(255, 255, 255, 0.95)",
          "backdrop": "rgba(0, 0, 0, 0.3)"
        },
        "status": {
          "success": "#059669",
          "error": "#dc2626",
          "warning": "#d97706",
          "info": "#2563eb"
        }
      }
    },
    "responsive": {
      "breakpoints": {
        "mobile": "768px",
        "tablet": "1024px",
        "desktop": "1200px",
        "wide": "1600px"
      },
      "sidebar": {
        "desktop": {
          "width": "280px",
          "collapsedWidth": "60px"
        },
        "mobile": {
          "width": "100vw",
          "overlay": true
        }
      },
      "rightSidebar": {
        "desktop": {
          "width": "320px",
          "collapsedWidth": "60px"
        },
        "mobile": {
          "hidden": true
        }
      },
      "mainContent": {
        "desktop": {
          "marginLeft": "280px",
          "marginRight": "60px"
        },
        "mobile": {
          "marginLeft": "0",
          "marginRight": "0"
        }
      }
    },
    "animations": {
      "sidebar": {
        "toggle": {
          "duration": "300ms",
          "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
        },
        "hover": {
          "duration": "200ms",
          "easing": "ease-out"
        }
      },
      "modal": {
        "slideIn": {
          "duration": "250ms",
          "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
          "transform": "translateX(100%)"
        },
        "fadeIn": {
          "duration": "200ms",
          "easing": "ease-out"
        }
      },
      "rightSidebar": {
        "expand": {
          "duration": "250ms",
          "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
          "delay": "300ms"
        },
        "collapse": {
          "duration": "200ms",
          "easing": "ease-in",
          "delay": "500ms"
        }
      },
      "search": {
        "focus": {
          "duration": "200ms",
          "easing": "ease-out"
        }
      }
    },
    "zIndex": {
      "dropdown": 50,
      "sidebar": 100,
      "rightSidebar": 90,
      "modal": 200,
      "backdrop": 150,
      "tooltip": 300
    }
  }
}
